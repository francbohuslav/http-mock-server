{
    "$schema": "./src/config.schema.json",
    "apiPort": 4445,
    "listeners": {
        "http": {
            "port": 4444,
            "requests": {
                "^/test$": "text:This is text response",
                "": "file:defaultResponse.txt"
            }
        },
        "kafka": [
            {
                "host": "localhost:9092",
                "topics": {
                    "incoming_kafka_topic": {
                        "sendResponse": true,
                        "delay": 3000,
                        "response": "file:kafkaResponse.txt",
                        "targetTopic": "outgoing_kafka_topic"
                    }
                }
            }
        ]
    }
}
